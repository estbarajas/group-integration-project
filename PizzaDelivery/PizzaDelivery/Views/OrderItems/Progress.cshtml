*@model PizzaDelivery.Models.OrderItem
<h2>Order Progress</h2>
@ViewBag.LOL
@{
    if (Model.Order.OrderConfirmed == true && Model.Order.OrderPrepped == false && Model.Order.OrderOutForDelivery == false)
    {
        <div class="container">
            <h2>Order status</h2>
            <p>Track your order's progress here!</p>
            <div class="progress">
                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100" style="width:40%">
                    33.3%
                </div>
            </div>
        </div>
    }
    else if (Model.Order.OrderConfirmed == true && Model.Order.OrderPrepped == true && Model.Order.OrderOutForDelivery == false)
    {
        <div class="container">
            <h2>Order status</h2>
            <p>Track your order's progress here!</p>
            <div class="progress">
                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100" style="width:66%">
                    66.6%
                </div>
            </div>
        </div>
    }
    else if (Model.Order.OrderConfirmed == true && Model.Order.OrderPrepped == true && Model.Order.OrderOutForDelivery == true)
    {
        <div class="container">
            <h2>Order status</h2>
            <p>Track your order's progress here!</p>
            <div class="progress">
                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">
                    100%
                </div>
            </div>
        </div>
    }




}

