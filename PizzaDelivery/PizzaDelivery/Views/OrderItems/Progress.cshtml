@model PizzaDelivery.Models.OrderItem




<h1 style="margin-top: 20px;">@ViewBag.FirstName @ViewBag.LastName</h1>
@*//<h5>Estimated time of arrival: @DateTime.Now.AddMinutes(39)</h5>*@



@{
    if (Model.Order.OrderConfirmed == true && Model.Order.OrderPrepped == false && Model.Order.OrderOutForDelivery == false)
    {
        <div class="container">
            <h3>Your order progress below.</h3>
            @*<p>The .active class animates the progress bar:</p>*@
            <div class="progress" style="height: 30px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100" style="width:33%;color: white;">
                    Order confirmed.
                </div>
            </div>
        </div>
    }
    else if (Model.Order.OrderConfirmed == true && Model.Order.OrderPrepped == true && Model.Order.OrderOutForDelivery == false)
    {
        <div class="container">
            <h3>Your progress order below.</h3>
            @*<p>The .active class animates the progress bar:</p>*@
            <div class="progress" style="height: 30px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100" style="width:66%;color: white;">
                    Making your food.
                </div>
            </div>
        </div>
    }
    else if (Model.Order.OrderConfirmed == true && Model.Order.OrderPrepped == true && Model.Order.OrderOutForDelivery == true)
    {
        <div class="container">
            <h3>Your progress order below.</h3>
            @*<p>The .active class animates the progress bar:</p>*@
            <div class="progress" style="height: 30px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%;color: white;">
                    Order is out for delivery!
                </div>
            </div>
        </div>

    }
    else
    {
        <h5>No order progress!</h5>
    }
}