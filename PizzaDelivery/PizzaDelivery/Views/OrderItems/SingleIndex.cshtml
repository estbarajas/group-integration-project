@model IEnumerable<PizzaDelivery.Models.OrderItem>

@{
    ViewBag.Title = "SingleIndex";
}

<h2>SingleIndex</h2>

<p>
    @Html.ActionLink("Add item", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Item.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FutureDeliveryTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Price)
            </td>
            <td></td>

            <td>
                @Html.ActionLink("Remove", "Delete", new { id = item.Id })
            </td>
            @*<td>
                    @Html.TextBoxFor(modelItem => item.FutureDeliveryTime)
                    <input type="submit" value="Generate report" />
                </td>*@
        </tr>


    }



</table>

@using (Html.BeginForm("FormTwo", "OrderItems", FormMethod.Post))
{
    @Html.TextBoxFor(model => model.Select(f => f.FutureDeliveryTime));
    @Html.ValidationMessageFor(model => model.Select(f => f.FutureDeliveryTime))
    <input type="submit" value="sub" />
}



<h2>Your total:</h2>
<h1>$@ViewBag.TotalAmount</h1>

@using (Html.BeginForm())
{
    <p>
        Apply Coupon Code: @Html.TextBox("SearchString")
        <input type="submit" value="Apply" />
    </p>
}



