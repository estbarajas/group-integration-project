@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string cLayout = "";
    if (User.IsInRole("Manager"))
    {
        cLayout = "~/Views/Shared/ManagerView.cshtml";
    }
    else if (User.IsInRole("Employee"))
    {
        cLayout = "~/Views/Shared/EmployeeLayout.cshtml";
    }
    else if(User.IsInRole("Customer"))
    {
        cLayout = "~/Views/Shared/Customer.cshtml";
    }
    else
    {
        cLayout = "~/Views/Shared/AnonymousUser.cshtml";
    }
    Layout = cLayout;
}